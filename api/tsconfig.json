{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/api/*": ["./*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}